{
    "manifest_version" : 2,
    "name" : "webcompataddon",
    "version" : "1.0",
    "author" : "Sonia Singla",
    "description" : "Internal addon to report Web-Compatibility issues.",

    "content_scripts" : [
        {
            "matches" : ["<all_urls>", "*://*.mozilla.org/*"],
            "js" : ["webcompataddon.js"]
        }
    ],

    "browser_action": {
        "default_icon": "icons/lightbulb.svg",
        "default_popup": "popups/_index.html"
      },
    "permissions" : []
}